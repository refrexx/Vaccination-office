<Page x:Class="Kursovoy.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovoy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите логин:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0"></Label>
            <TextBox Width="300" Name="TBoxLogin" HorizontalAlignment="Center" Height="24"></TextBox>
            <Label Content="Введите пароль:" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <PasswordBox Name="PBoxPassword"  Height="24" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"></PasswordBox>
            <Button Name="BtnLog" Click="BtnLogClick" Background="LightBlue" Width="200" Content="Войти" Margin="0,40,0,0"></Button>
            
        </StackPanel>

       
    </Grid>
</Page>
